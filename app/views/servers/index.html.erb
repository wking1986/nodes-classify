<h1>Listing servers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Tags</th>
    <th>Status</th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.name %></td>
    <td><%= link_to server.project.name, project_path(server.project) %></td>
    <td>
      <% server.tags.each do |tag| %>
       <%= tag.name %>
      <% end %>
    </td>
    <td><%= server.status %></td>
  </tr>
<% end %>
</table>

