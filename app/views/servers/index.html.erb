<h1>Listing servers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Tags</th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= link_to server.name, edit_server_path(server) %></td>
    <td><%= link_to server.project.name, project_path(server.project) %></td>
    <td>
      <% server.tags.each do |tag| %>
       <%= tag.name %>
      <% end %>
    </td>
    <td><%= link_to 'Destroy', server, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

